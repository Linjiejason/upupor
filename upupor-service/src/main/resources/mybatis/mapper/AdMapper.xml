<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.upupor.service.dao.mapper.AdMapper">
  <resultMap id="BaseResultMap" type="com.upupor.service.dao.entity.Ad">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="ad_id" jdbcType="VARCHAR" property="adId" />
    <result column="ad_position_id" jdbcType="VARCHAR" property="adPositionId" />
    <result column="ad_intro" jdbcType="VARCHAR" property="adIntro" />
    <result column="ad_url" jdbcType="VARCHAR" property="adUrl" />
    <result column="ad_img" jdbcType="VARCHAR" property="adImg" />
    <result column="ad_status" jdbcType="INTEGER" property="adStatus" />
    <result column="create_time" jdbcType="BIGINT" property="createTime" />
    <result column="sys_update_time" jdbcType="TIMESTAMP" property="sysUpdateTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, ad_id, ad_position_id, ad_intro, ad_url, ad_img, ad_status, create_time, sys_update_time
  </sql>
  <select id="all" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from ad where ad_status = 0 order by create_time desc
  </select>

</mapper>