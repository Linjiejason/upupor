<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.upupor.service.dao.mapper.StatementMapper">
  <resultMap id="BaseResultMap" type="com.upupor.service.dao.entity.Statement">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="statement_id" jdbcType="INTEGER" property="statementId" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="statement" jdbcType="VARCHAR" property="statement" />
    <result column="create_time" jdbcType="BIGINT" property="createTime" />
    <result column="sys_update_time" jdbcType="TIMESTAMP" property="sysUpdateTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, statement_id, title, statement, create_time, sys_update_time
  </sql>
  <select id="getByStatementId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from statement
    where statement_id = #{statementId,jdbcType=BIGINT} limit 1
  </select>
</mapper>